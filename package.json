{
  "name": "drug-interaction-checker",
  "version": "1.0.0",
  "description": "Professional drug interaction analysis with AI-powered insights",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-dmg": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-all": "electron-builder --mac --win"
  },
  "keywords": [
    "drug",
    "interaction",
    "medicine",
    "health",
    "ai",
    "fda"
  ],
  "author": "Drug Interaction Checker",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.druginteractionchecker.app",
    "productName": "Drug Interaction Checker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "index_en.html",
      "scripts.js",
      "scripts_en.js",
      "styles.css",
      "styles_en.css",
      "Figure/**/*",
      "약물상호작용검사기/**/*"
    ],
    "mac": {
      "category": "public.app-category.medical",
      "icon": "icon.png",
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "dmg": {
      "title": "Drug Interaction Checker",
      "icon": "icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Drug Interaction Checker"
    }
  }
} 